{
  "compilerOptions": {
    "types": [
      "node",
      "react",
      "react-dom",
      "jest"
    ],
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": "./",
    "paths": {
      "@nmportfolio/core": [
        "./projects/core/src"
      ],
      "@nmportfolio/themes": [
        "./projects/themes/src"
      ]
    }
  },
  "types": [
    "node",
    "react",
    "react-dom",
    "jest"
  ]
}